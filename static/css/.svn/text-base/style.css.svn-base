html {
padding:0;
margin:0;
width:100%;
height:100%;
}
pre {
white-space: pre-wrap; /* css-3 */
white-space: -moz-pre-wrap !important; /* Mozilla, since 1999 */
white-space: -pre-wrap; /* Opera 4-6 */
white-space: -o-pre-wrap; /* Opera 7 */
word-wrap: break-word; /* Internet Explorer 5.5+ */
}

body {
padding:0px 0 10px 0;
margin:0;
width:100%;
height:100%; 
background:#c9c9c9;
font-family:Arial, Helvetica, sans-serif;
color:#454545;
font-size:12px;
line-height:20px;
}
.container {
background-color:#FFFFFF;
}
.header {
font-family:Verdana, Arial, Helvetica, sans-serif;
color:#ffffff;
font-size:10px;
}
 a{
color:#000;
font-size:10px;
text-decoration:none;
}
.mylink{
	color:#fff;
	font-size:12px;
	text-decoration:none;
}

.input_search {
background:none;
margin:0;
height:16px;
width:135px;
padding:2px 0 0 0px;
border:none;;
font-family:Arial, Helvetica, sans-serif;
font-size:11px;
font-weight:bold;
color:#aeaeae;
}
.drop_lang {
width:91px;
background:url(/static/img/header/btn_lang.gif) no-repeat;
height:18px;
color:#000000;
margin:0;
font-family:Arial, Helvetica, sans-serif;
font-size:11px;
font-weight:bold;
color:#aeaeae;
text-align:left;
}
.banner {
padding-bottom:16px;
}
.menu_left {
margin-left:29px;
}
.ourproducts {
padding-right:17px;
font-size:11px;
line-height:18px;
}
.ourproducts p{
margin:0 0 10px 0;
}
.content {
line-height:24px;
padding-top:10px;
}
.content p{
margin:0 0 20px 0;
text-align:justify;
}
.arial_12_gray {
font-family:Arial, Helvetica, sans-serif;
font-size:12px;
color:#454545;
text-decoration:none;
}
.arial_14_gray_bold {
